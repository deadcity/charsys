<%= form_for @character, url: {action: 'create'} do |f| %>
	<table width="100%">
		<tr>
			<td>
				<%= f.label :name %>
				<%= f.text_field :name %>
			</td>
			<td>
				<%= f.label :behavior_primary, "Mask" %>
				<%= f.text_field :behavior_primary %>
			</td>
			<td>
				<%= f.label :lineage, "Clan" %>
				collection goes here
			</td>
		</tr>
		<tr>
			<td>
				<%= f.label :user_id, "Player" %>
				<%= f.hidden :user_id, session[:user_id] %>
				<%= @user.name %>
			</td>
			<td>
				<%= f.label :behavior_secondary, "Dirge" %>
				<%= f.text_field :behavior_secondary %>
			</td>
			<td>
				<%= f.label :sublineage, "Bloodline" %>
				<%= f.text_field :sublineage %>
			</td>
		</tr>
		<tr>
			<td>
				<%= f.label :chronicle_id, "Chronicle" %>
				<%= f.hidden :chronicle_id, @chronicle.id %>
			</td>
			<td>
				<%= f.label :concept %>
				<%= f.text_field :concept %>
			</td>
			<td>
				<%= f.label :affiliation, "Covenant" %>
				collection goes here
			</td>
		</tr>
		<tr>
			<td colspan="3">
				<h2>Attributes</h2>
			</td>
		</tr>
	</table>
<% end %>