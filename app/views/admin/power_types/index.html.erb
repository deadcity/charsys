<h1>Power Types</h1>
<table class="table">
	<tr>
		<th>Power Type</th>
		<th>Character Type</th>
	</tr>
	<% if @power_type.present? %>
		<% @power_type.each do |power_type| %>
			<tr>
				<td><%= link_to power_type.name, admin_power_type_path(power_type) %></td>
				<td><%= power_type.character_type %></td>
			</tr>
		<% end %>
	<% else %>
		<tr>
			<td colspan="2" class="text-center">
				No power types found.
			</td>
		</tr>
	<% end %>
</table>

<p class="text-right"><%= link_to "Create New", new_admin_power_type_path, class: "btn btn-primary" %></p>